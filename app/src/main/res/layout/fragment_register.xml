<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:text="Interview"
        android:fontFamily="sans-serif"
        android:textSize="30dp"
        android:textColor="@color/mblack"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="200px"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Register"
        android:textColor="#757575"
        android:textSize="25dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="400px"
        android:layout_marginEnd="40dp"
        android:hint="Name"
        android:textColorHint="#9FA8DA"
        android:background="@drawable/edittext_bg"
        android:textColor="#9FA8DA"
        android:id="@+id/editTextName"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="550px"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edittext_bg"
        android:hint="Email"
        android:textColorHint="#9FA8DA"
        android:inputType="textEmailAddress"
        android:textColor="#9FA8DA"
        android:id="@+id/editTextEmail"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="700px"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edittext_bg"
        android:hint="Password"
        android:textColorHint="#9FA8DA"
        android:inputType="textEmailAddress"
        android:textColor="#9FA8DA"
        android:id="@+id/editTextPassword"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="850px"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edittext_bg"
        android:hint="Confirm Password"
        android:textColorHint="#9FA8DA"
        android:inputType="textEmailAddress"
        android:textColor="#9FA8DA"
        android:id="@+id/editTextConfirmPassword"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1000px"
        android:background="@drawable/matbut"
        android:text="Register"
        android:textColor="#9FA8DA"
        android:id="@+id/button_reg"
        />



</RelativeLayout>