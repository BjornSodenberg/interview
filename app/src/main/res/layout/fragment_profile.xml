<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="user_name"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:background="@color/profile"
        android:textColor="#fff"
        android:gravity="center"
        android:id="@+id/notiff_user_id"
        />

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="250px"
        android:layout_height="100px"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:background="@color/profile"
        android:text="Exit"
        android:textColor="#fff" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/sa"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp"
        android:onClick="onClick"
        />

    <TextView
        android:id="@+id/askCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notiff_user_id"
        android:layout_marginStart="55dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/profile_image"
        android:text="0"
        android:textColor="@color/mblack"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/askCount"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/profile_image"
        android:text="Вопросы"
        android:textColor="@color/mblack"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ratingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notiff_user_id"
        android:layout_marginStart="70dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/askCount"
        android:text="0"
        android:textColor="@color/mblack"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/ratingCount"
        android:layout_marginStart="111dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/profile_image"
        android:text="Рейтинг"
        android:textColor="@color/mblack"
        android:textSize="20dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview_id"
        android:layout_marginTop="140dp"
        >

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>